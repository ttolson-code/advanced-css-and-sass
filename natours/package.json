{
  "name": "natours",
  "version": "1.0.0",
  "description": "",
  "browserslist": "last 10 versions",
  "main": "index.js",
  "scripts": {
    "watch-sass": "sass sass/main.scss dist/css/style.css -w --no-source-map",
    "dev-server": "live-server --open=dist",
    "dev-start": "npm-run-all --parallel dev-server watch-sass",
    "compile-sass": "sass sass/main.scss dist/css/style.comp.css --no-source-map",
    "concat-css": "concat -o dist/css/style.concat.css dist/css/icon-font.css dist/css/style.comp.css",
    "prefix-css": "postcss dist/css/style.concat.css --use autoprefixer -o dist/css/style.prefix.css",
    "compress-css": "sass --style=compressed --no-source-map dist/css/style.prefix.css dist/css/style.css",
    "build": "npm-run-all compile-sass concat-css prefix-css compress-css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "concat": "^1.0.3",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "sass": "^1.54.6"
  }
}
